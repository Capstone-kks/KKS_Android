<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteActivity">
    <LinearLayout
        android:id="@+id/toolbarLl"
        android:padding="10dp"
        android:background="#27837A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/backIv"
            android:src="@drawable/ic_back"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="제목"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/titleEt"
            android:padding="5dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="30dp"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:background="@drawable/background_input"
            android:lines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/titleTv"
            app:layout_constraintStart_toEndOf="@+id/titleTv"
            app:layout_constraintTop_toTopOf="@+id/titleTv" />
        <TextView
            android:id="@+id/categoryTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/titleTv"
            android:text="카테고리"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"/>

        <Spinner
            android:id="@+id/categorySpinner"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="33dp"
            tools:listitem="@layout/item_spinner"
            android:background="@drawable/background_input"
            app:layout_constraintEnd_toEndOf="@+id/titleEt"
            app:layout_constraintStart_toStartOf="@+id/titleEt"
            app:layout_constraintTop_toTopOf="@+id/categoryTv"
            app:layout_constraintBottom_toBottomOf="@+id/categoryTv"/>

        <TextView
            android:id="@+id/starTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categoryTv"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="평점"/>
        <!-- 별 아이콘 -->
        <ImageView
            android:id="@+id/writeStarIv1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_star_no_select"
            app:layout_constraintTop_toTopOf="@+id/starTv"
            app:layout_constraintBottom_toBottomOf="@+id/starTv"
            app:layout_constraintStart_toStartOf="@id/categorySpinner" />

        <ImageView
            android:id="@+id/writeStarIv2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_star_no_select"
            app:layout_constraintStart_toEndOf="@id/writeStarIv1"
            app:layout_constraintTop_toTopOf="@id/writeStarIv1"/>

        <ImageView
            android:id="@+id/writeStarIv3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_star_no_select"
            app:layout_constraintStart_toEndOf="@id/writeStarIv2"
            app:layout_constraintTop_toTopOf="@id/writeStarIv2"/>

        <ImageView
            android:id="@+id/writeStarIv4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_star_no_select"
            app:layout_constraintStart_toEndOf="@id/writeStarIv3"
            app:layout_constraintTop_toTopOf="@id/writeStarIv3"/>

        <ImageView
            android:id="@+id/writeStarIv5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_star_no_select"
            app:layout_constraintStart_toEndOf="@id/writeStarIv4"
            app:layout_constraintTop_toTopOf="@id/writeStarIv4"/>

        <TextView
            android:id="@+id/contentTv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/starTv"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"/>

        <EditText
            android:id="@+id/contentEt"
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:hint="내용을 입력해주세요"
            android:gravity="start"
            android:lines="8"
            android:maxLines="10"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="@+id/categorySpinner"
            app:layout_constraintEnd_toEndOf="@id/categorySpinner"
            app:layout_constraintTop_toTopOf="@+id/contentTv"
            android:background="@drawable/background_input"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imageAddButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/calendarimage"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="@+id/contentEt"
            app:layout_constraintTop_toBottomOf="@+id/contentEt"/>
        <ImageView
            android:background="@drawable/background_input"
            android:scaleType="centerCrop"
            android:layout_marginStart="10dp"
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="@+id/imageAddButton"
            app:layout_constraintBottom_toBottomOf="@+id/imageAddButton"
            app:layout_constraintStart_toEndOf="@+id/imageAddButton"/>


        <TextView
            android:textColor="#3C3C3C"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toStartOf="@+id/imageAddButton"
            app:layout_constraintTop_toBottomOf="@+id/imageAddButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미지 추가"/>


        <Button
            android:layout_marginTop="70dp"
            app:layout_constraintStart_toStartOf="@+id/imageAddButton"
            app:layout_constraintEnd_toEndOf="@+id/contentEt"
            app:layout_constraintTop_toBottomOf="@+id/imageAddButton"
            android:backgroundTint="@color/splash_background"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="작성하기"/>





    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>