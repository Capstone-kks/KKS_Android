<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/follow_user_img"
        android:layout_marginStart="20dp"/>

    <TextView
        app:layout_constraintTop_toTopOf="@+id/follow_user_img"
        app:layout_constraintBottom_toBottomOf="@+id/follow_user_img"
        app:layout_constraintStart_toEndOf="@+id/follow_user_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/follow_user_id"
        android:layout_marginStart="10dp"
        android:text="사용자 이름"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"/>

    <ImageButton
        app:layout_constraintTop_toTopOf="@+id/follow_user_img"
        app:layout_constraintBottom_toBottomOf="@+id/follow_user_img"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/follow_imgbtn"
        android:background="@drawable/ic_baseline_favorite_24"/>
    <View
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/follow_user_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/teal_700"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>