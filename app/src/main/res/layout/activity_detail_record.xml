<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".record.DetailRecordActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 상단 tool bar 역할-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbarLl"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/backIv"
                android:src="@drawable/ic_back"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/recordDate"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022.03.28"/>
            <TextView
                android:textColor="#035049"
                android:textSize="18sp"
                android:id="@+id/recordCategory"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전시회"
                android:layout_marginEnd="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="#009688"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:paddingBottom="30dp"
                        android:paddingEnd="20dp"
                        android:paddingStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:id="@+id/recordTitle"
                            android:layout_width="0dp"
                            android:lines="1"
                            android:ellipsize="end"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@+id/editButton"
                            app:layout_constraintBottom_toBottomOf="@+id/editButton"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/editButton"
                            android:text="요시고 사진전 다녀옴"
                            android:textColor="@color/black"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/editButton"
                            android:visibility="invisible"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/deleteButton"
                            android:textSize="11sp"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:text="수정"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:visibility="invisible"
                            android:backgroundTint="@color/black"
                            android:textColor="@color/white"
                            android:id="@+id/deleteButton"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textSize="11sp"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:text="삭제"/>
                        <ImageView
                            android:background="#F2F6F7"
                            android:id="@+id/recordPicture"
                            android:layout_marginTop="30dp"
                            app:layout_constraintTop_toBottomOf="@+id/recordTitle"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:src="@drawable/sample"/>
                        <TextView
                            android:textSize="16sp"
                            android:id="@+id/recordRateTitle"
                            android:layout_marginTop="25dp"
                            app:layout_constraintTop_toBottomOf="@+id/recordPicture"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="평점"/>
                        <ImageView
                            android:id="@+id/likeImage"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/recordRateTitle"
                            app:layout_constraintBottom_toBottomOf="@+id/recordRateTitle"
                            android:src="@drawable/ic_like"/>
                        <RatingBar
                            android:layout_marginStart="10dp"
                            android:isIndicator="true"
                            android:progressTint="#FFEB3B"
                            android:id="@+id/ratingBar"
                            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="4"
                            app:layout_constraintTop_toTopOf="@id/recordRateTitle"
                            app:layout_constraintStart_toEndOf="@+id/recordRateTitle"
                            app:layout_constraintBottom_toBottomOf="@+id/recordRateTitle"/>

                        <TextView
                            android:textSize="16sp"
                            android:id="@+id/recordContentTitle"
                            app:layout_constraintTop_toBottomOf="@+id/recordRateTitle"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="내용"/>
                        <TextView
                            android:textColor="@color/black"
                            android:layout_marginStart="10dp"
                            android:textSize="16sp"
                            android:id="@+id/recordContent"
                            app:layout_constraintTop_toBottomOf="@+id/recordRateTitle"
                            app:layout_constraintStart_toEndOf="@+id/recordContentTitle"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="13dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="경복궁 역에있는 요시고사진전을 갔다왔다. \n 가격은 15000원.. 사진은 그럭저럭 볼만했다 \n 기념품 샵도 있었는데 살만한건 없었다. 대체로 가격은 비쌈. "/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <View
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="#808080"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="댓글"/>
                    <!-- 댓글 recyclerView-->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/commentRecyclerView"
                        tools:listitem="@layout/comment_list_item"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:padding="7dp"
                            android:textSize="15sp"
                            android:background="@drawable/comment_input_background"
                            android:hint="댓글을 작성해 주세요."
                            android:id="@+id/commentEt"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <androidx.appcompat.widget.AppCompatButton
                            app:layout_constraintTop_toBottomOf="@+id/commentEt"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:backgroundTint="@color/splash_background"
                            android:textSize="11sp"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:text="등록"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>