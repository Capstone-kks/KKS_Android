<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:paddingHorizontal="20dp">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:id="@+id/search_result_recyclerview_item_imgView"
            android:src="@drawable/ic_launcher_background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/search_result_recyclerview_item_title"
                    android:layout_weight="10"
                    android:layout_gravity="center"
                    android:text="제목"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="15dp"
                    android:singleLine="true"
                    android:ellipsize="marquee" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/search_result_recyclerview_item_likeCount"
                    android:text=""
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/search_result_recyclerview_item_like"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_person_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/search_result_recyclerview_item_user"
                    android:text="lolla44"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_star_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/search_result_recyclerview_item_rate"
                        android:text="3.5"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/search_result_recyclerview_item_text"
                android:text="가나다라마바사아 자차카타 파하 둠다다 디비다 새생명에 푸른 빛을 비추길 \n둠다다 디비다다 둡다다 디비다"
                android:textSize="13dp"
                android:layout_marginHorizontal="15dp"
                android:singleLine="false"
                android:maxLines="3"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:id="@+id/search_result_recyclerview_item_date"
        android:text="2022.04.12"
        android:textSize="10dp"
        android:textAlignment="textEnd"
        android:layout_marginHorizontal="20dp"/>

</LinearLayout>